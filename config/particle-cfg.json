{
  "detectRetina": false,
  "fpsLimit": 40,
  "interactivity": {
    "detectsOn": "canvas",
    "events": {
      "onHover": {
        "enable": true,
        "mode": "bubble"
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 90,
        "duration": 2,
        "opacity": 8,
        "size": 6,
        "speed": 3
      }
    }
  },
  "particles": {
    "color": {
      "value": "#0000ff",
      "animation": {
        "enable": true,
        "sync": true
      }
    },
    "lineLinked": {
      "blink": true,
      "color": "#ff0000",
      "consent": true,
      "distance": 90,
      "enable": true,
      "opacity": 1,
      "width": 0.2
    },
    "move": {
      "attract": {
        "enable": true,
        "rotate": {
          "x": 600,
          "y": 1200
        }
      },
      "bounce": true,
      "direction": "none",
      "enable": true,
      "outMode": "bounce",
      "random": true,
      "speed": 0.4,
      "straight": false
    },
    "number": {
      "density": {
        "enable": false,
        "area": 70
      },
      "limit": 0,
      "value": 1000
    },
    "opacity": {
      "animation": {
        "enable": true,
        "minimumValue": 0.05,
        "speed": 2,
        "sync": false
      },
      "random": true,
      "value": 1
    },
    "shape": {
      "type": "triangle"
    },
    "size": {
      "animation": {
        "enable": true,
        "minimumValue": 0.5,
        "speed": 40,
        "sync": false
      },
      "random": true,
      "value": 5
    }
  },
  "polygon": {
    "draw": {
      "enable": true,
      "lineColor": "rgba(0,0,0,0.2)",
      "lineWidth": 0.6
    },
    "move": {
      "radius": 10
    },
    "inlineArrangement": "equidistant",
    "scale": 1,
    "type": "inline"
  }
}